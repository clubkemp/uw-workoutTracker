    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="assets/css/glider.css">
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
    <div class="container">
        {{{body}}}
    </div>
     <!-- Modal Structure -->
        <div id="modal1" class="modal">
            <div class="modal-content">
                <div class="row">
                    Name:
                    <div class="input-field inline">
                        <input id="name" name="name" type="text">
                    </div>
                </div>
                <div class="row">
                    Type:
                    <div class="input-field inline">
                        <input id="type" name="type" type="text">
                    </div> 
                </div>
                <div class="row">
                    Location:
                    <div class="input-field inline">
                        <input id="location" name="location" type="text">
                    </div>
                </div>
                <div class="row">
                    Duration(m):
                    <div class="input-field inline">
                        <input id="duration" name="duration" type="number">
                    </div>
                </div>
                <div class="row">
                    Weight(lbs):
                    <div class="input-field inline">
                        <input id="weight" name="weight" type="number">
                    </div>
                </div>
                <div class="row">
                    Sets:
                    <div class="input-field inline">
                        <input id="sets" name="sets" type="number">
                    </div>
                </div>
                <div class="row">
                    Reps:
                    <div class="input-field inline">
                        <input id="reps" name="reps" type="number">
                    </div>
                </div>
                <div class="row">
                    Distance(mi):
                    <div class="input-field inline">
                        <input id="distance" name="reps" type="number">
                    </div>
                </div>                
            <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-green btn-flat save-drill">Save</a>
            </div>
        </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- Compiled and minified JavaScript -->
