<div class="row">
    <div class="input-field col s12 m6">
        <h5>Create a new workout</h5>
        <input placeholder="Hella cardio" type="text" class="create-workout-input">
    </div>
    <a class="btn-floating btn-large waves-effect waves-light yellow col-1 create-workout"><i class="material-icons black-text">add</i></a>

</div>
{{#each workout}}
    <div class="divider"></div>
    <div class="section">
        <div class="row workout" id={{_id}}>
            <div class="col-12">
                <div class="row">
                    <div class="col">
                        <h3>{{name}}</h3>
                        <a class="waves-effect waves-light btn create-drill yellow black-text" data-workoutid={{_id}}>New Exercise</a>

                    </div>
                </div>
                <div class="row">
                {{#each drill}} 
                <div class="col s12 m5 card-wrapper">
                    <div class="card-panel teal">
                        <h5 class="white-text">{{name}}</h5>
                        {{#each tags}}
                            <div class="chip">
                                {{this}}
                            </div>
                        {{/each}}
                        <span class="white-text">
                            <ul>
                                <li>type: {{type}},</li>
                                <li>location: {{location}},</li>
                                <li>duration: {{duration}} minutes</li>
                            </ul>
                            <p>{{description}}</p>
                        </span>
                        <br>
                        <a class="waves-effect waves-teal btn-flat modal-trigger edit-drill blue" data-drillid={{_id}}>Edit</a>
                        <a class="waves-effect waves-teal btn-flat delete-drill light-blue" data-drillid={{_id}}>delete</a>
                    </div>
                </div>
                {{/each}}  
            </div>
            </div>    
        </div>
    </div>
    
{{/each}}
        </div>
        